<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenidos a carreras por La Rioja{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{asset('bundles/appcorredoresrioja/css/normalizar.css')}}"rel="stylesheet" type="text/css"/>
            <link href="{{asset('bundles/appcorredoresrioja/css/entrada.css')}}"rel="stylesheet" type="text/css"/>
            <link href="{{asset('bundles/appcorredoresrioja/css/carrerasrioja.css')}}"rel="stylesheet" type="text/css"/>
            <link href="{{asset('css/bootstrap.css')}}"rel="stylesheet" type="text/css"/>
            <link href="{{asset('bundles/appcorredoresrioja/css/jumbotron-narrow.css')}}"rel="stylesheet" type="text/css"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <nav class="navbar">
                <div class="container">
                        <div class="nav navbar-nav pull-right">
                            {% set locale = app.request.locale %}
                            {%if locale == 'es' %}
                                <a href="{{path('portada.en')}}">English</a> | Español
                            {% elseif locale == 'en' %}
                                English | <a href="{{path('portada.es')}}">Español</a>
                            {% endif %}
                        </div>
                </div>
            </nav>
            <div class="container">
                <div class="header clearfix">
                    <nav>
                        <ul class="nav nav-pills pull-right">
                            <li class="{{ app.request.attributes.get('_route') == 'portada' ? 'active' }}"><a href="{{path('portada')}}">{{'menu.corredores' | trans}}</a></li>
                            <li class="{{ app.request.attributes.get('_route') == 'organizaciones' ? 'active' }}"><a href="{{path('organizaciones')}}">{{'menu.organizadores' | trans}}</a></li>
                            <li class="{{ app.request.attributes.get('_route') == 'admin' ? 'active' }}"><a href="{{path('admin')}}">{{'menu.intranet' | trans}}</a></li>
                        </ul>
                    </nav>
                    <h3 class="text-muted">Corredores por La Rioja</h3>
                </div>     
            {% block submenu %}{% endblock %}
            <article>
            {% block content %}{% endblock %}
        </article>
        <hr/>
        <footer>
            <a href="mailto:edbenid@unirioja.es">{{'contacto' | trans}}</a>
            
        </footer>
    </div>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>


